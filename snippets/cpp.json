{
  "#include <>": {
    "prefix": "is",
    "body": "#include <${1:iostream}>${0}"
  },
  "#include \"\"": {
    "prefix": "ic",
    "body": "#include \"${1:config.h}\"${0}"
  },
  "using namespace": {
    "prefix": "un",
    "body": "using namespace ${1:std};${0}"
  },
  "using std::": {
    "prefix": "us",
    "body": "using std::${1:cout};${0}"
  },
  "using custom::": {
    "prefix": "uc",
    "body": "using ${1:std}::${2:cout};${0}"
  },
  "struct": {
    "prefix": "struct",
    "body": [ "struct ${1:name} {", "\t${0}", "};" ]
  },
  "#define": {
    "prefix": "def",
    "body": "#define ${0:macro}"
  },
  "include guard": {
    "prefix": "ig",
    "body": [
      "#ifndef ${1:macro}",
      "#define ${1}",
      "",
      "${0}",
      "",
      "#endif /* #ifndef ${1} */" ]
  },
  "normal function": {
    "prefix": "func",
    "body": [ "${1:void} ${2:funcname}(${3:args}) {", "\t${0}", "}" ]
  },
  "if": {
    "prefix": "if",
    "body": [ "if (${1}) {", "\t${0}", "}" ]
  },
  "ifelse": {
    "prefix": "ifel",
    "body": [ "if (${1}) {", "\t${2}", "} else {", "\t${0}", "}" ]
  },
  "for": {
    "prefix": "for",
    "body": [ "for (${1:auto i = 0}; ${2:i < n}; ${3:++i}) {", "\t${0}", "}" ]
  },
  "main": {
    "prefix": "main",
    "body": [ "int main(int argc, char *argv[]) {", "\t${0}", "\treturn 0;", "}" ]
  }
}
